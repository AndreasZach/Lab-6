<Window x:Class="Lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab6"
        mc:Ignorable="d"
        Title="The Lonely Road" ResizeMode="NoResize" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label x:Name="BartenderLabel" 
               Content="Bartender"
               FontSize="20"
               HorizontalAlignment="Center"
               Margin="0,5,0,0"
               VerticalAlignment="Top"/>
        <ListBox x:Name="BartenderListBox" 
                 Margin="0,45,0,0"
                 HorizontalAlignment="Center"
                 Height="300"
                 VerticalAlignment="Top"
                 Width="150"
                 Grid.RowSpan="3"/>

        <Label x:Name="WaiterLabel"
               Content="Waiter"
               Grid.Column="1"
               Grid.Row="0"
               FontSize="20"
               HorizontalAlignment="Center"
               Margin="0,5,0,0"
               VerticalAlignment="Top"/>
        <ListBox x:Name="WaiterListBox"
                 Grid.Column="1"
                 Grid.Row="0"
                 Margin="0,45,0,0"
                 HorizontalAlignment="Center"
                 Height="300"
                 VerticalAlignment="Top"
                 Width="150"
                 Grid.RowSpan="3"/>

        <Label x:Name="PatronsLabel"
               Content="Patrons"
               Grid.Column="2"
               Grid.Row="0"
               FontSize="20"
               HorizontalAlignment="Center"
               Margin="0,5,0,0"
               VerticalAlignment="Top"/>
        <ListBox x:Name="PatronLisBox"
                 Grid.Column="2"
                 Grid.Row="0"
                 Margin="0,45,0,0"
                 HorizontalAlignment="Center"
                 Height="300"
                 VerticalAlignment="Top"
                 Width="150"
                 Grid.RowSpan="3"/>

        <Label Content="&quot;Open time&quot;"
               Grid.Column="3"
               Grid.Row="0"
               FontSize="20"
               HorizontalAlignment="Center"
               Margin="0,30,0,0"
               VerticalAlignment="Top"/>
        <Label x:Name="CountDownLabel"
               Content="0 s"
               Grid.Column="3"
               Grid.Row="0"
               FontSize="20"
               HorizontalAlignment="Center"
               Margin="0,0,0,30"
               VerticalAlignment="Bottom"/>

        <Label x:Name="SpeedLabel"
               Content="Simulation State"
               Grid.Column="3"
               Grid.Row="1"
               FontSize="18"
               HorizontalAlignment="Center"
               Margin="0,0,0,0"
               VerticalAlignment="Top"/>
        <ComboBox x:Name="SimStateComboBox" 
                  Grid.Column="3" 
                  Grid.Row="1" 
                  HorizontalAlignment="Center" 
                  Margin="0,40,0,0" 
                  VerticalAlignment="Top" 
                  Width="150"/>
        <ComboBox x:Name="SpeedComboBox"
                Grid.Column="3"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Margin="0,0,0,0" 
                VerticalAlignment="Bottom" 
                Width="150"/>
        <Label x:Name="PatronLabel"
               Content="Patrons: " 
               Grid.Column="3"
               Grid.Row="2" 
               FontSize="15"
               Margin="35,20,0,0"
               Width="150"
               VerticalAlignment="Top"/>
        <Label x:Name="ChairsLabel"
               Content="Free chairs:" 
               Grid.Column="3"
               Grid.Row="2"
               FontSize="15"
               Margin="35,0,0,0"
               Width="150"
               VerticalAlignment="Center"/>
        <Label x:Name="GlasesLabel"
               Content="Glases in bar:" 
               Grid.Column="3"
               Grid.Row="2"
               FontSize="15"
               Margin="35,0,0,20"
               Width="150"
               VerticalAlignment="Bottom"/>
        <Button x:Name="OpenPubButton"
            Content="Open Bar"
            Grid.Column="0"
            HorizontalAlignment="Center"
            Margin="0,0,0,5" 
            VerticalAlignment="Bottom" 
            Width="540"
            Height="40"
            IsEnabled="False"
            Grid.Row="2"
            Grid.ColumnSpan="3"/>
        <Label x:Name="SpeedLabel_Copy"
            Content="Simulation Speed"
            Grid.Column="3"
            Grid.Row="1"
            FontSize="18"
            HorizontalAlignment="Center"
            Margin="0,0,0,30"
            VerticalAlignment="Bottom"/>
    </Grid>
</Window>
